{
	"$schema": "../node_modules/@tauri-apps/cli/schema.json",
	"build": {
		"beforeBuildCommand": "npm run build",
		"beforeDevCommand": "npm run dev",
		"devPath": "http://localhost:3000",
		"distDir": "../out"
	},
	"package": {
		"productName": "PomoLogs",
		"version": "1.0.0"
	},
	"tauri": {
		"allowlist": {
			"all": false
		},
		"bundle": {
			"active": true,
			"category": "Utility",
			"copyright": "npitt.dev",
			"deb": {
				"depends": []
			},
			"externalBin": [],
			"icon": ["icons/32x32.png", "icons/128x128.png", "icons/icon.ico"],
			"identifier": "app.vercel.pomologs",
			"longDescription": "PomoLogs is a simple time management tool that helps you stay focused and productive. It's based on the Pomodoro Technique and helps you track your time and tasks.",
			"macOS": {
				"entitlements": null,
				"exceptionDomain": "",
				"frameworks": [],
				"providerShortName": null,
				"signingIdentity": null
			},
			"publisher": "npitt.dev",
			"resources": [],
			"shortDescription": "A simple time management tool that helps you stay focused and productive.",
			"targets": "all",
			"windows": {
				"certificateThumbprint": null,
				"digestAlgorithm": "sha256",
				"timestampUrl": ""
			}
		},
		"security": {
			"csp": null
		},
		"updater": {
			"active": false
		},
		"windows": [
			{
				"fullscreen": false,
				"height": 1000,
				"resizable": true,
				"title": "PomoLogs",
				"width": 800
			}
		]
	}
}
